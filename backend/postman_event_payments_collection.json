{
  "info": {
    "_postman_id": "d7b6c8a4-0000-4000-8000-000000000000",
    "name": "EventApp - Payment Mock",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Create Mock Payment Intent",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"amount\": 1000, \"currency\": \"eur\" }"
        },
        "url": {
          "raw": "{{baseUrl}}/api/reservations/1/pay",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservations",
            "1",
            "pay"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Confirm Mock Payment (succeeds)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/reservations/1/confirm?paymentIntentId=mock_client_secret_1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservations",
            "1",
            "confirm"
          ],
          "query": [
            {
              "key": "paymentIntentId",
              "value": "mock_client_secret_1"
            }
          ]
        }
      },
      "response": []
    },
    {
      "name": "Confirm Mock Payment (fails)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/reservations/1/confirm?paymentIntentId=wrong_secret",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "reservations",
            "1",
            "confirm"
          ],
          "query": [
            {
              "key": "paymentIntentId",
              "value": "wrong_secret"
            }
          ]
        }
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Basic tests for responses",
          "if (pm.response.code === 200) {",
          "    pm.test('Status is 200', function () { pm.response.to.have.status(200); });",
          "    try {",
          "        var json = pm.response.json();",
          "        pm.test('Has mode', function() { pm.expect(json).to.have.property('mode'); });",
          "    } catch (e) {",
          "        // not json or empty",
          "    }",
          "} else {",
          "    pm.test('Status is 200', function () { pm.expect(pm.response.code).to.equal(200); });",
          "}"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "protocolProfileBehavior": {}
}
